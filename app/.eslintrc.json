{
    "extends": [
        "airbnb-base",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "newline-per-chained-call": "off",
        "global-require": "off",
        "no-console": "off",
        "consistent-return": "off",
        "prefer-destructuring": "off",
        "class-methods-use-this": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        }
    }
}
